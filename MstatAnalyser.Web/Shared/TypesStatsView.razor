@if (TypeStats is not null)
{
    <table class="table table-xs">
        <thead>
            <tr>
                <td>Type Name</td>
                <td class="text-end">Size</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var type in TypeStats.OrderByDescending(x => x.Type.FullName))
            {
                <tr>
                    <td>@type.Type.FullName</td>
                    <td class="text-end">@type.Size.ToString("N0")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    [Parameter]
    public IList<TypeStats> TypeStats { get; set; }
}
